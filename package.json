{
  "name": "runesmith",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "backend"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:web": "turbo dev --filter=@runesmith/web",
    "dev:backend": "cd backend && set \"PYTHONIOENCODING=utf-8\" && set \"PYTHONUTF8=1\" && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000"
  },
  "packageManager": "npm@10.8.2",
  "devDependencies": {
    "turbo": "^2.5.0",
    "typescript": "^5.7.0"
  }
}
